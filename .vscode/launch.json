    "version": "0.2.0",
    "configurations": [
        {
            "name": "Runserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/home/manage.py",
            "cwd": "${workspaceFolder}/home",
            "args": [
                "runserver",
                "--noreload",
                "0.0.0.0:8000",
                // "--nothreading"
            ],
            "env": {
                "ALLOWED_HOSTS": "10.0.0.10"
            },
            "console": "integratedTerminal",
            "justMyCode": true,
            // "preLaunchTask": "Start stripe redirection" ,
            // "terminateProcess": true
        },
        {
            "name": "Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/home/manage.py",
            "cwd": "${workspaceFolder}/home",
            "args": [
                "test",
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            // "preLaunchTask": "Start stripe redirection" ,
            // "terminateProcess": true
        },
    ]
}